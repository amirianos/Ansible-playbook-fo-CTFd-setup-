# {{ ansible_managed }}
{% if ssl_enabled %}


server {
    listen 443 ssl;
    server_name {{ domain }} www.{{ domain }};

    location / {
        include uwsgi_params;
        uwsgi_pass unix:{{ wsgi_socket }};
    }
}

{% else %}


server {
    listen 80;
    server_name {{ domain }} www.{{ domain }};

    location / {
        include uwsgi_params;
        uwsgi_pass unix:{{ wsgi_socket }};
    }
}

{% endif %}
